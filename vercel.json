{
  "builds": [
    {
      "src": "shegar/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": { "distDir": "staticfiles_build" }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "shegar/wsgi.py"
    }
  ]
}

{
  "build": {
    "env": {
      "PATH": "/usr/lib/postgresql/15/bin:$PATH",
      "LD_LIBRARY_PATH": "/usr/lib/postgresql/15/lib:$LD_LIBRARY_PATH"
    }
  }
}